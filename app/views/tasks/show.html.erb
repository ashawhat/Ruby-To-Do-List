<h1><%= @task.name %></h1>

<p><%= @task.name %></p>
<p><%= @task.done %></p>


<form action="/tasks/<%= @task.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input name="done" type="hidden" value="true">
  <input id="task_name" name="name" type="hidden" value="<%= @task.name %>">
  <button>Mark done</button>
</form>

<p><a href="/tasks/<%= @task.id %>/edit">Edit a Task</a></p>
<p><a href="/tasks/<%= @task.id %>"
  data-confirm="You sure?"
  data-method="delete"
  rel="nofollow">Delete</a></p>



<p><a href="/tasks">Return to task list</a></p>
